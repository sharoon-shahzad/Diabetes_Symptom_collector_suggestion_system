# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/diabetes_system

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_required

# Encryption Configuration (Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_32_character_hex_encryption_key_here

# Server Configuration
PORT=5000

# LM Studio Configuration (Local AI Model)
LM_STUDIO_BASE_URL=http://127.0.0.1:1234
LM_STUDIO_MODEL=waltonfuture-diabetica-7b

# ChromaDB Configuration (Vector Database for RAG)
CHROMA_DB_HOST=http://127.0.0.1:8000

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_specific_password

# Optional: Node Environment
NODE_ENV=development
